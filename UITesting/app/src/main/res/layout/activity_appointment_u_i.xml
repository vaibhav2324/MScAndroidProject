<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppointmentActivity"
    android:gravity="top"
    android:orientation="vertical">
<LinearLayout
    android:orientation="horizontal"
    android:background="@color/pink"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_marginLeft="70dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_today_black_24dp" />

    <TextView
        android:layout_width="235dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/caudex_bold_italic"
        android:text="@string/title"
        android:textColor="@color/cardview_light_background"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_event_note_black_24dp"
            android:layout_margin="15dp"/>
        <EditText
            android:id="@+id/appointment_title"
        android:hint="@string/appointment_title"
            android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="40dp" />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="20dp"
    android:layout_gravity="center">
    <ImageView
        android:layout_margin="15dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_person_black_24dp"/>
    <EditText
        android:id="@+id/doctor_name"
        android:hint="@string/doctor_name"
        android:textSize="15sp"

        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"

        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="start"
        android:orientation="horizontal">

        <ImageView

            android:layout_margin="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/date_time_appoint" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:text="@string/result"
            android:textSize="15sp"

            />
    </LinearLayout>

    <ImageView
        android:id="@+id/save_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/done"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/cormorant_upright_semibold"
        android:textStyle="italic"

        />
</LinearLayout>
</LinearLayout>